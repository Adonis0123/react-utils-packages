{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./*"
      ],
      "@react-utils/layouts": [
        "../../packages/layouts/src/index.ts"
      ],
      "@react-utils/layouts/*": [
        "../../packages/layouts/src/*"
      ],
      "@react-utils/ui": [
        "../../packages/ui/src/index.ts"
      ],
      "@react-utils/ui/*": [
        "../../packages/ui/src/*"
      ]
    },
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "esModuleInterop": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
